<odoo>
  <data>
   <record id="action_report_class_schedule" model="ir.actions.report">
    <field name="name">class schedule</field>
    <field name="model">school.classes</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">school_ms.report_class_schedule_template</field>
    <field name="print_report_name">object.class_id</field>
</record>

      <template id="report_class_schedule_template">
          <t t-call="web.html_container">
              <t t-foreach="docs" t-as="o">
                  <t t-call="web.external_layout">
                      <div class="page" align="center">
                          <h2 class="text-center">Class Schedule: <span t-field="o.class_id"/></h2>
                          <t t-set="schedule_data" t-value="o.download_class_schedule_action()"/>
                          <t t-set="days" t-value="['saturday', 'sunday', 'monday', 'tuesday', 'wednesday', 'thursday', 'friday']"/>
                          <t t-set="day_names" t-value="{'saturday': 'Saturday', 'sunday': 'Sunday', 'monday': 'Monday', 'tuesday': 'Tuesday', 'wednesday': 'Wednesday', 'thursday': 'Thursday', 'friday': 'Friday'}"/>
                          <table class="table table-bordered" style="width: 100%; border-collapse: collapse;">
                              <thead>
                                  <tr>
                                      <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;">Day/Time</th>
                                      <t t-foreach="schedule_data['times']" t-as="time">
                                          <th style="border: 1px solid #ddd; padding: 8px; background-color: #f2f2f2;" t-esc="time"/>
                                      </t>
                                  </tr>
                              </thead>
                              <tbody>
                                  <t t-foreach="days" t-as="day">
                                      <tr>
                                          <td style="border: 1px solid #ddd; padding: 8px; font-weight: bold;" t-esc="day_names[day]"/>
                                          <t t-foreach="schedule_data['times']" t-as="time">
                                              <td style="border: 1px solid #ddd; padding: 8px;">
                                                  <t t-esc="schedule_data['schedule'][day].get(time, '')"/>
                                              </td>
                                          </t>
                                      </tr>
                                  </t>
                              </tbody>
                          </table>
                      </div>
                  </t>
              </t>
          </t>
      </template>
  </data>
</odoo>