<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="school_classes_form" model="ir.ui.view">
        <field name="name">School.Classes.Form</field>
        <field name="model">school.classes</field>
        <field name="arch" type="xml">
            <form create="false">
                <headr>
                    <button name="open_change_class_state_wizard"
                            string="Change State"
                            type="object" class="btn-primary"/>
                    <button
                            name="%(action_report_class_schedule)d"
                            string="Download class schedule"
                            type="action"
                            class="btn-primary"
                            icon="fa-file-pdf-o"
                    />
                    <button
                            name="%(action_report_students_class_info)d"
                            string="Download students info"
                            type="action"
                            class="btn-primary"
                            icon="fa-file-pdf-o"
                    />
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,active,complete,cancel"/>
                </headr>
                <sheet>
                    <h1><field name="class_id" class="mb-2"/></h1>
                   <group>
                       <field name="grad"/>
                       <field name="educational_stage"/>
                       <field name="notes"/>
                       <field name="total_number"/>
                       <field name="current_number"/>
                   </group>
                    <notebook>
                        <page string="Students">
                            <field name="students">
                                <list edit="False" create="False" delete="False">
                                    <field name="student_id"/>
                                    <field name="name"/>
                                    <field name="father_name"/>
                                    <field name="last_name"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Class Schedule">
                            <field name="class_schedule">
                                <list>
                                    <field name="materials_id"/>
                                    <field name="day"/>
                                    <field name="start_time"/>
                                    <field name="duration"/>
                                    <field name="end_time"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>

        </field>

    </record>

    <record id="school_classes_tree" model="ir.ui.view">
        <field name="name">School.Classes.Tree</field>
        <field name="model">school.classes</field>
        <field name="arch" type="xml">
            <list
                    decoration-warning="state == 'draft'"
                    decoration-success="state == 'active'"
                    decoration-primary="state == 'complete'"
                    decoration-danger="state == 'cancel'"  create="false">
                <field name="class_id"/>
                <field name="educational_stage"/>
                <field name="total_number"/>
                <field name="current_number"/>
            </list>
        </field>
    </record>

    <record id="school_classes_kanban" model="ir.ui.view">
        <field name="name">School.Classes.Kanban</field>
        <field name="model">school.classes</field>
        <field name="arch" type="xml">
            <kanban default_group_by="grad">
                <template>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title">
                                <field name="class_id"/>
                            </div>
                            <div>
                             Educational Stage:<field name="educational_stage"/>
                            </div>
                            <div>
                             Total Number:<field name="total_number"/>
                            </div>
                            <div>
                             Current Number:<field name="current_number"/>
                            </div>
                            <div>
                                <field name="state" widget="badge"
                                       decoration-warning="state == 'draft'"
                                       decoration-success="state == 'active'"
                                       decoration-primary="state == 'complete'"
                                       decoration-danger="state == 'cancel'"/>
                            </div>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>

    </record>

    <record id="school_classes_search" model="ir.ui.view">
        <field name="name">School.Classes.Search</field>
        <field name="model">school.classes</field>
        <field name="arch" type="xml">
            <search>
                <filter name="group_by_grad" string="Grop By Grad" context="{'group_by':'grad'}"/>
                <filter name="group_by_educational_stage"
                        string="Grop By Educational Stage" context="{'group_by':'educational_stage'}"/>
            </search>
        </field>
    </record>

    <record id="school_classes_action" model="ir.actions.act_window">
        <field name="name"> School Classes</field>
        <field name="res_model">school.classes</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="school_classes_kanban"/>
        <field name="context">{'create': False}</field>
    </record>

    <menuitem id="school_classes_menuitem"
              name="Classes"
              parent="classes_menuitem"
              action="school_classes_action"
    />

</odoo>