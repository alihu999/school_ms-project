<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="school_students_tree" model="ir.ui.view">
        <field name="name">School Students Tree</field>
        <field name="model">school.students</field>
        <field name="arch" type="xml">
            <list decoration-warning="state == 'draft'"
                  decoration-info="state == 'admitted'"
                  decoration-success="state == 'active'"
                  decoration-primary="state == 'alumni'"
                  decoration-danger="state == 'terminated'">
                <field name="student_id"/>
                <field name="name"/>
                <field name="father_name"/>
                <field name="last_name"/>
                <field name="state" widget="badge"
                       decoration-warning="state == 'draft'"
                       decoration-info="state == 'admitted'"
                       decoration-success="state == 'active'"
                       decoration-primary="state == 'alumni'"
                       decoration-danger="state == 'terminated'"/>
                <field name="class_id"/>
            </list>
        </field>
    </record>


    <record id="school_students_form" model="ir.ui.view">
        <field name="name">School Students Form</field>
        <field name="model">school.students</field>
        <field name="arch" type="xml">
            <form>
                <headr>
                    <button name="open_change_student_state_wizard"
                            string="Change State"
                            type="object" class="btn-primary"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,admitted,active,alumni,terminated"/>
                </headr>

                <sheet>
                    <h1><field name="student_id" class="mb-2"/></h1>
                    <field name="image" widget="image" class="oe_avatar" string=""/>
                    <group string="Personal information">
                        <field name="name"/>
                        <field name="last_name"/>
                        <field name="father_name"/>
                        <field name="mother_name"/>
                        <field name="gender"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                        <field name="nationality_id"/>
                        <field name="religion"/>
                    </group>
                    <group string="Academic Information">
                        <field name="grad"/>
                        <field name="educational_stage"/>
                        <field name="class_id"
                               readonly="state in ['New', 'draft', 'alumni','terminated']"
                               domain="[('grad', '=', grad),('state','=','active')]"/>
                        <field name="note" widget="html"/>
                    </group>
                    <group string="Health Information">
                        <field name="blood_group"/>
                        <field name="medical_information"/>
                    </group>
                    <notebook>
                        <page string="Academic Records">
                            <field name="academic_records">
                                <list>
                                    <field name="material_name"/>
                                    <field name="quiz"/>
                                    <field name="exam"/>
                                </list>
                            </field>
                        </page>
                        <page string="School Installment" >
                            <field name="school_installment">
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>




      <record id="school_students_view_kanban" model="ir.ui.view">
        <field name="name">school.students.view.kanban</field>
        <field name="model">school.students</field>
        <field name="arch" type="xml">
            <kanban default_group_by="grad" >
                <field name="name"/>
                <field name="last_name"/>
                <field name="student_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click_edit oe_kanban_details">
                            <div class="o_kanban_image">
                                <field name="image" widget="image"/>
                            </div>
                            <div class="o_kanban_content">
                                <strong><field name="name"/> <field name="last_name"/></strong>
                                <br/>
                                <span>Student ID: <field name="student_id"/></span>
                                <br/>
                                <span>Grad: <field name="grad"/></span>
                                <br/>
                                <span>Class ID: <field name="class_id"/></span>
                                <br/>
                                <field name="state" widget="badge"
                                       decoration-warning="state == 'draft'"
                                       decoration-info="state == 'admitted'"
                                       decoration-success="state == 'active'"
                                       decoration-primary="state == 'alumni'"
                                       decoration-danger="state == 'terminated'"/>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>






    <record id="school_students_action" model="ir.actions.act_window">
        <field name="name">School Students</field>
        <field name="res_model">school.students</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_id" ref="school_students_tree"/>
    </record>


    <menuitem id ="School_students"
              name="Students"
              parent="school_ms_root"
              action="school_students_action"
    />
</odoo>