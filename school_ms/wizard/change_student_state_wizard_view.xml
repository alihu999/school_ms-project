<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="open_change_student_state_wizard_form" model="ir.ui.view">
        <field name="name">Open.Change.Student.State.Wizard.Form</field>
        <field name="model">change.student.state.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"  readonly="True"/>
                        <field name="state"/>
                        <field name="reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="open_change_student_state_wizard_action" model="ir.actions.act_window">
        <field name="name">Change Student State Wizard</field>
        <field name="res_model">change.student.state.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>